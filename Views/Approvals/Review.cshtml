@model ConsumerApp.Models.ProductApproval

@{
    ViewData["Title"] = "Mahsulotni ko'rib chiqish";
}

<div class="page-container">
    <div class="review-card">
        <div class="review-header">
            <h1>👁️ Mahsulotni Ko'rib Chiqish</h1>
            <a href="@Url.Action("Index")" class="btn-back">⬅️ Orqaga</a>
        </div>

        <div class="review-content">
            <!-- Mahsulot Ma'lumotlari -->
            <div class="product-section">
                <h2>📦 Mahsulot Ma'lumotlari</h2>
                <div class="info-grid">
                    <div class="info-card">
                        <div class="info-label">Mahsulot nomi</div>
                        <div class="info-value large">@Model.ProductName</div>
                    </div>
                    <div class="info-card">
                        <div class="info-label">Producer ID</div>
                        <div class="info-value">#@Model.ProductId</div>
                    </div>
                    <div class="info-card">
                        <div class="info-label">Kategoriya</div>
                        <div class="info-value">
                            <span class="badge-category">@Model.Category</span>
                        </div>
                    </div>
                    <div class="info-card">
                        <div class="info-label">Narx</div>
                        <div class="info-value price">@Model.Price.ToString("N0") so'm</div>
                    </div>
                    <div class="info-card">
                        <div class="info-label">Miqdor</div>
                        <div class="info-value">@Model.Quantity dona</div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Manufacturer))
                    {
                        <div class="info-card">
                            <div class="info-label">Ishlab chiqaruvchi</div>
                            <div class="info-value">@Model.Manufacturer</div>
                        </div>
                    }
                </div>

                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="description-box">
                        <strong>📝 Ta'rif:</strong>
                        <p>@Model.Description</p>
                    </div>
                }
            </div>

            <!-- Qabul qilingan Ma'lumot -->
            <div class="kafka-section">
                <h2>📡 Kafka Ma'lumotlari</h2>
                <div class="info-grid">
                    <div class="info-card">
                        <div class="info-label">Qabul qilingan sana</div>
                        <div class="info-value">@Model.ReceivedDate.ToString("dd.MM.yyyy HH:mm:ss")</div>
                    </div>
                    <div class="info-card">
                        <div class="info-label">Holati</div>
                        <div class="info-value">
                            @if (Model.Status == "Approved")
                            {
                                <span class="status-approved">✅ Tasdiqlangan</span>
                            }
                            else if (Model.Status == "Rejected")
                            {
                                <span class="status-rejected">❌ Rad etilgan</span>
                            }
                            else
                            {
                                <span class="status-pending">⏳ Kutilmoqda</span>
                            }
                        </div>
                    </div>
                </div>
            </div>

            @if (Model.Status == "Pending")
            {
                <!-- Tasdiqlash Formlari -->
                <div class="actions-section">
                    <div class="action-cards">
                        <!-- Tasdiqlash -->
                        <div class="action-card approve-card">
                            <h3>✅ Tasdiqlash</h3>
                            <p>Bu mahsulot barcha talablarga javob beradi va tasdiqlashingiz mumkin.</p>

                            <form method="post" action="@Url.Action("Approve", new { id = Model.Id })" class="action-form">
                                @Html.AntiForgeryToken()

                                <div class="form-group">
                                    <label for="approveComments">Izoh (ixtiyoriy):</label>
                                    <textarea id="approveComments"
                                          name="comments"
                                          class="form-control"
                                          rows="3"
                                          placeholder="Qo'shimcha izohlar..."></textarea>
                                </div>

                                <button type="submit" class="btn btn-approve">
                                    ✅ Tasdiqlash
                                </button>
                            </form>
                        </div>

                        <!-- Rad etish -->
                        <div class="action-card reject-card">
                            <h3>❌ Rad Etish</h3>
                            <p>Agar mahsulot talablarga javob bermasa, rad etish sababini ko'rsating.</p>

                            <form method="post" action="@Url.Action("Reject", new { id = Model.Id })" class="action-form">
                                @Html.AntiForgeryToken()

                                <div class="form-group">
                                    <label for="rejectionReason">Rad etish sababi <span class="required">*</span>:</label>
                                    <select id="rejectionReason" name="rejectionReason" class="form-control" required>
                                        <option value="">Sabab tanlang...</option>
                                        @* <option value="Narx noto'g'ri">Narx noto'g'ri</option>
                                        <option value="Miqdor noto'g'ri">Miqdor noto'g'ri</option>
                                        <option value="Ma'lumotlar to'liq emas">Ma'lumotlar to'liq emas</option>
                                        <option value="Kategoriya noto'g'ri">Kategoriya noto'g'ri</option>
                                        <option value="Takrorlangan mahsulot">Takrorlangan mahsulot</option> *@
                                        <option value="Boshqa sabab">Boshqa sabab</option>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label for="rejectComments">Qo'shimcha izoh:</label>
                                    <textarea id="rejectComments"
                                          name="comments"
                                          class="form-control"
                                          rows="3"
                                          placeholder="Batafsil tushuntirish..."></textarea>
                                </div>

                                <button type="submit" class="btn btn-reject">
                                    ❌ Rad Etish
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="reviewed-section">
                    <h2>✅ Ko'rib Chiqilgan</h2>
                    <div class="info-grid">
                        @if (Model.ReviewedDate.HasValue)
                        {
                            <div class="info-card">
                                <div class="info-label">Sana</div>
                                <div class="info-value">@Model.ReviewedDate.Value.ToString("dd.MM.yyyy HH:mm")</div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.ReviewedBy))
                        {
                            <div class="info-card">
                                <div class="info-label">Kim tomonidan</div>
                                <div class="info-value">@Model.ReviewedBy</div>
                            </div>
                        }
                    </div>

                    @if (!string.IsNullOrEmpty(Model.RejectionReason))
                    {
                        <div class="rejection-box">
                            <strong>❌ Rad etish sababi:</strong>
                            <p>@Model.RejectionReason</p>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Comments))
                    {
                        <div class="comments-box">
                            <strong>💬 Izohlar:</strong>
                            <p>@Model.Comments</p>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

